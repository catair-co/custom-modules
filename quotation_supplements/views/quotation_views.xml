<odoo>
    <record id="view_supplement_quotation_form" model="ir.ui.view">
        <field name="name">supplement.quotation.form</field>
        <field name="model">supplement.quotation</field>
        <field name="arch" type="xml">
            <form string="CotizaciÃ³n de Suplementos Alimenticios">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="capsule_qty"/>
                    </group>
                    <group string="Materiales">
                        <field name="bottle_id"/>
                        <field name="cap_id"/>
                        <field name="label_id"/>
                    </group>
                    <group string="Costos">
                        <field name="raw_material_cost"/>
                        <field name="subcontracted_mixing_cost"/>
                        <field name="shipping_cost"/>
                        <field name="encapsulation_cost" readonly="1"/>
                        <field name="packaging_cost" readonly="1"/>
                        <field name="total_cost" readonly="1"/>
                        <field name="final_price" readonly="1"/>
                    </group>
                    <group string="Fechas">
                        <field name="signature_date"/>
                        <field name="advance_payment"/>
                        <field name="final_delivery_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
